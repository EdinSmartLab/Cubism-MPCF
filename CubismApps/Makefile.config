SHELL := /bin/bash

CC ?= gcc
LD ?= gcc

# core
bs ?= 16
ap ?= float
weps ?= 1e-6
precdiv ?= 0
microfusion ?= 2
accurateweno ?= 0
sse ?= 0
avx ?= 0
omp ?= 1
align ?= 16
bgq ?= 0
qpx ?= 0

# +node
hdf ?= 0
vtk ?= 0
numa ?= 0
cvt ?= 0
nthreads ?= 24

# +cluster
fftw ?= 0
#

CPPFLAGS+= $(extra)

ifeq "$(ap)" "float"
        CPPFLAGS += -D_FLOAT_PRECISION_
endif

ifeq "$(accurateweno)" "1"
        CPPFLAGS += -D_ACCURATEWENO_
endif

CPPFLAGS += -D_MICROFUSION_=$(microfusion)

ifeq "$(config)" "release"
	ifeq "$(CC)" "icc"
		OPTFLAGS+= -DNDEBUG -O3 -xHOST  -ip -ansi-alias -fno-fnalias -inline-level=1
		ifeq "$(ap)" "float"
			CPPFLAGS += -fp-model precise 
		else
			CPPFLAGS += -fast
		endif
	else
		ifeq "$(bgq)" "1"
			OPTFLAGS += -O3 -qsmp=omp:noauto -qhot=level=1  -qarch=qp -qtune=qp -qprefetch=assistthread
		else
			OPTFLAGS += -O3  -fstrict-aliasing -fschedule-insns2 -falign-functions=16 -DNDEBUG -ftree-vectorize
		endif
		OPTFLAGS += -DNDEBUG
	endif
else
	CPPFLAGS += -g 
endif

ifeq "$(CC)" "icc"
	ifeq "$(avx)" "1"
		CPPFLAGS += -xAVX -D_AVX_
	endif
	CPPFLAGS += -Wbrief -wd18000 -diag-disable remark
else
	ifeq "$(avx)" "1"
		CPPFLAGS += -mavx -D_AVX_
	endif	
endif

##CPPFLAGS += -Wno-deprecated 

ifeq "$(cvt)" "1"
	CPPFLAGS += -D_USE_CVT_
endif

ifeq "$(precdiv)" "1"
CPPFLAGS += -D_PREC_DIV_
endif 

ifeq "$(precdiv)" "-1"
	CPPFLAGS += -D_PREC_DIV_NONE_
	ifeq "$(CC)" "icc"
		#OPTFLAGS += -ipo
	endif
endif 

ifeq "$(ap)" "float"
	CPPFLAGS += -D_SP_COMP_
endif 

ifeq "$(qpx)" "1"
	CPPFLAGS += -D_QPX_
endif

ifeq "$(sse)" "1"
	CPPFLAGS += -D_SSE_ -msse -msse2
endif

ifeq "$(omp)" "1"
	ifeq "$(CC)" "icc"
		CPPFLAGS += -openmp	
		OPTFLAGS += -openmp
	else
		ifeq "$(bgq)" "1"
			CPPFLAGS += -qsmp=omp
			OPTFLAGS += -qsmp=omp
		else
			CPPFLAGS += -fopenmp
			OPTFLAGS += -fopenmp
		endif
	endif	
endif

######

vtk-inc ?=/usr/local/include/vtk-5.2/ 
vtk-lib ?=/usr/local/lib/vtk-5.2/ 
numa-inc ?=/cluster/work/infk/diegor/numactl-2.0.8-rc4 
numa-lib ?=/cluster/work/infk/diegor/numactl-2.0.8-rc4
hdf-inc ?=.
hdf-lib ?=.

ifneq "$(findstring rosa,$(shell hostname))" ""
	ifeq "$(CC)" "cc"
		LIBS += -dynamic
	endif
endif

ifneq "$(findstring todi,$(shell hostname))" ""
	ifeq "$(CC)" "cc"
