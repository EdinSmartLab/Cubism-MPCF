ifneq "$(findstring ibm,$(shell hostname))" ""
       hdf-inc = /gpfs/DDNgpfs1/bekas/BGQ/hdf5-1.8.0/hdf5/include/
       hdf-lib = /gpfs/DDNgpfs1/bekas/BGQ/hdf5-1.8.0/hdf5/lib/
